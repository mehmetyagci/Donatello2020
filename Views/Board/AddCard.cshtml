@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Donatello2020.ViewModels.AddCard
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <h2>Add Card</h2>

        <form method="post" asp-controller="Board" asp-action="AddCard">

            <div asp-validation-summary="All" class="text-danger">

            </div>
            <label asp-for="Contents"></label>
            <input type="text" asp-for="Contents" />
            <button type="submit" class="btn">Add it!</button>
        </form>

    </div>
</div>
